@using Debts.ViewModels
@model DebtViewModel

<h1>@Model.Name</h1>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Сумма
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Debts)
        {
                <tr>
                    @if (Model.Name.Equals(item.Member1))
                    {
                    <td>
                        <label asp-for="@item.Member2">@item.Member2</label>
                    </td>
                    <td>
                        <label asp-for="@item.Money">Тебе должны @item.Money</label>
                    </td>
                    }
                    else
                    {
                    <td>
                        <label asp-for="@item.Member1">@item.Member1</label>
                    </td>

                    <td>
                        <label asp-for="@item.Money">Ты должен @item.Money</label>
                    </td>
                    }
                </tr>
        }
        </tbody>
</table>
