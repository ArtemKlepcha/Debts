@using Debts.ViewModels
@model DebtViewModel

@foreach (var item in Model.Debts)
{
            <div>
                <h4>Member1: @item.Member1</h4>
                <h4>Member2: @item.Member2</h4>
                <h4>Money: @item.Money</h4>
            </div>
            <br />
}

@ViewBag.mID
@ViewBag.id

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Имя
            </th>
            <th>
                Долг
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Debts)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Money)
                    </td>
                </tr>
        }
        </tbody>
</table>
